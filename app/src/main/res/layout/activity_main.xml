<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ro.stery.orar.MainActivity">

    <TextView
        android:id="@+id/weather_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/weather_temp"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="@string/weather_temp"/>

    <TextView
        android:id="@+id/weather_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/weather_city"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="-50dp"
        android:text="@string/weather_city"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:divider="?android:dividerHorizontal"
        android:showDividers="beginning|middle|end"
        android:gravity="center">

        <TextView
            android:id="@+id/luni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Luni"
            android:gravity="center"
            android:textSize="50dp"
            android:background="@drawable/ripple_effect"
            android:clickable="true"/>

        <TextView
            android:id="@+id/marti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marti"
            android:gravity="center"
            android:textSize="50dp"
            android:background="@drawable/ripple_effect"
            android:clickable="true"/>

        <TextView
            android:id="@+id/miercuri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Miercuri"
            android:gravity="center"
            android:textSize="50dp"
            android:background="@drawable/ripple_effect"
            android:clickable="true"/>

        <TextView
            android:id="@+id/joi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Joi"
            android:gravity="center"
            android:textSize="50dp"
            android:background="@drawable/ripple_effect"
            android:clickable="true"/>

        <TextView
            android:id="@+id/vineri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vineri"
            android:gravity="center"
            android:textSize="50dp"
            android:background="@drawable/ripple_effect"
            android:clickable="true"/>

    </LinearLayout>

</LinearLayout>
